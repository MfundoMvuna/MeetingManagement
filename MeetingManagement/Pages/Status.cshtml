@page
@model MeetingManagement.Pages.StatusModel
@{
}

<h2>Update Minutes Status</h2>

<form method="post" id="statusFrm">
    <input type="hidden" asp-for="Status.MeetingItemStatusID" />
    <input type="hidden" asp-for="Status.MeetingItemID" />

    <div class="form-group">
        <label asp-for="Status.StatusDescription">Current Status</label>
        <input readonly asp-for="Status.StatusDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label for="newStatusDescription">Update with a new Status</label>
        <input id="newStatusDescription" name="NewStatusDescription" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Status.ResponsiblePerson">Responsible Person</label>
        <input asp-for="Status.ResponsiblePerson" class="form-control" />
        <span asp-validation-for="Status.ResponsiblePerson" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Status.ActionRequired">Action Required:</label>
        <input  asp-for="Status.ActionRequired" class="form-control" />
        <span asp-validation-for="Status.ResponsiblePerson" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            $('#statusFrm').validate({
                rules: {
                    'NewStatusDescription': {
                        required: true,
                        minlength: 2
                    },
                    'Status.ResponsiblePerson': {
                        required: true
                    },
                    'Status.ActionRequired': {
                        required: true
                    }
                },
                messages: {
                    'NewStatusDescription': "Please enter a title (at least 2 characters)",
                    'Status.ResponsiblePerson': "Please select a valid date",
                    'Status.ActionRequired': "Please select a Type"
                },
                errorELement: 'span',
                errorPlacement: function (error, element) {
                    error.css('color', '#03A9F4');
                    error.insertAfter(element);
                }
            });
        })
    </script>
}
