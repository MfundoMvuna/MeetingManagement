@page
@model MeetingManagement.Pages.IndexModel

@{
    ViewData["Title"] = "Welcome to Meeting Management System";
}

<h2>Welcome to the  Resolution Action System</h2>
<br/>
<div class="card-deck">
    <div class="card fade-in">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">Create Meeting</h5>
            <p class="card-text flex-grow-1">Easily create new meetings, set the meeting type, date, and add meeting minutes. Keep track of your upcoming meetings effortlessly.</p>
            <a href="@Url.Page("/Create")" class="btn btn-primary mt-auto">Create Meeting</a>
        </div>
    </div>
    <div class="card fade-in">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">View Meetings</h5>
            <p class="card-text flex-grow-1">View all your scheduled meetings in one place. Check details, review meeting minutes, and ensure nothing is missed.</p>
            <a href="@Url.Page("/PreviousMeeting")" class="btn btn-primary mt-auto">View Meetings</a>
        </div>
    </div>
    <div class="card fade-in">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">Update Meeting Minutes Status</h5>
            <p class="card-text flex-grow-1">Easily update the status of meeting minutes to keep everyone informed about the progress and responsibilities.</p>
            <a href="@Url.Page("/PreviousMeeting")" class="btn btn-primary mt-auto">Update Status</a>
        </div>
    </div>
</div>

<style>
    .card-deck {
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
    }
    .card {
        width: 30%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        display: flex;
        flex-direction: column;
    }
    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
    }
    .card-body {
        padding: 15px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    .card-text {
        flex-grow: 1;
    }
    .btn {
        margin-top: 10px;
    }
</style>